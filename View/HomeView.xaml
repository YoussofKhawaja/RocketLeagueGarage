<UserControl
    x:Class="RocketLeagueGarage.View.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RocketLeagueGarage.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:notifications="clr-namespace:Notifications.Wpf.Core.Controls;assembly=Notifications.Wpf.Core"
    xmlns:viewModel="clr-namespace:RocketLeagueGarage.ViewModel"
    d:DesignHeight="640"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewModel:HomeViewModel />
    </UserControl.DataContext>

    <StackPanel>
        <StackPanel>
            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Left"
                FontSize="28"
                Foreground="White"
                Text="Information" />

            <StackPanel Orientation="Horizontal">
                <Border Width="400" Height="300">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Offset="0.0" Color="#2d2d2d" />
                            <GradientStop Offset="1" Color="#252525" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <Border.Clip>
                        <RectangleGeometry
                            RadiusX="10"
                            RadiusY="10"
                            Rect="0,0,400,300" />
                    </Border.Clip>

                    <Grid>
                        <StackPanel>
                            <TextBlock
                                Margin="20,10,10,0"
                                HorizontalAlignment="Left"
                                FontSize="28"
                                Foreground="White"
                                Text="What I'am doing right now" />
                            <TextBlock
                                x:Name="whatdoing"
                                MaxWidth="420"
                                Margin="20,10,10,0"
                                HorizontalAlignment="Left"
                                FontSize="30"
                                Foreground="Gold"
                                TextWrapping="WrapWithOverflow" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Border
                    Width="400"
                    Height="300"
                    Margin="45,0,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Offset="0.0" Color="#2d2d2d" />
                            <GradientStop Offset="1" Color="#252525" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <Border.Clip>
                        <RectangleGeometry
                            RadiusX="10"
                            RadiusY="10"
                            Rect="0,0,400,300" />
                    </Border.Clip>

                    <Grid>
                        <StackPanel>
                            <TextBlock
                                Margin="20,10,10,0"
                                HorizontalAlignment="Left"
                                FontSize="28"
                                Foreground="White"
                                Text="Next Bump For All Trades" />
                            <TextBlock
                                x:Name="timelabel"
                                MaxWidth="420"
                                Margin="20,10,10,0"
                                HorizontalAlignment="Left"
                                FontSize="30"
                                Foreground="Gold"
                                TextWrapping="WrapWithOverflow" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>

        <StackPanel>
            <TextBlock
                Margin="0,10,0,20"
                HorizontalAlignment="Left"
                FontSize="28"
                Foreground="White"
                Text="Launcher" />

            <StackPanel Orientation="Horizontal">
                <Border
                    Width="200"
                    Height="200"
                    CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop x:Name="buttonplay" Offset="0.0" Color="White" />
                            <GradientStop x:Name="buttonplay2" Offset="1" Color="#0f0f0f" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid MouseEnter="onoffbutton_MouseEnter" MouseLeave="Grid_MouseLeave">
                        <materialDesign:PackIcon
                            x:Name="icon"
                            Width="120"
                            Height="120"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Kind="Play" />
                        <Button
                            x:Name="onoffbutton"
                            Height="200"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="onoffbutton_Click" />
                        <Label
                            x:Name="onoff"
                            VerticalAlignment="Bottom"
                            HorizontalContentAlignment="Center"
                            FontSize="22"
                            Foreground="gold" />
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
